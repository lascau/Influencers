@model Influencers.BusinessLogic.ViewModels.AuthorViewModel
@{
    ViewData["Title"] = "AddAuthor";
}

<style>
    body {
        font-family: Arial;
        background: #7eedbd;
    }
</style>
<form asp-action="AddAuthor" method="post">
    <input type="hidden" asp-for="ArticleContent" id="content-container"/>
    <input type="hidden" asp-for="ArticleTitle" id="title-container"/>
    <div class="text-center">
        <h4 class="display-4">Adding author</h4>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
            Nickname
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="@Model.Nickname" required />
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-2">
            Email
        </div>
        <div class="col-10">

            <input class="form-control" type="text" asp-for="@Model.Email" required />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-6"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-dark">Add</button>
        </div>
    </div>
</form>

@section scripts {
    <script src="~/lib/jquery-cookie/jquery.cookie.js"></script>

    <script>
        $(document).ready(function () {
            let contentValue = $.cookie("content");
            let titleValue = $.cookie("title");
            $("#content-container").val(contentValue);
            $("#title-container").val(titleValue);
        })

    </script>

}



