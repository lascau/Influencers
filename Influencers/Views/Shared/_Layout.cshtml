<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Influencers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu_bar.css" />

</head>
<body>
    <header>
        <nav class="navbar-dark navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark box-shadow mb-5">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Influencers</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="mynav_navbar">
                    <div class="mynav_dropdown">
                        <button class="mynav_dropbtn">
                            Home
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="mynav_dropdown-content">
                            <a class="nav-link text-black-50" asp-area="" asp-controller="Home" asp-action="Index">Posts</a>
                            <a class="nav-link text-black-50" asp-area="" asp-controller="Home" asp-action="Leaderboard">Leaderboard</a>
                        </div>
                    </div>
                    <div class="mynav_dropdown">
                        <button class="mynav_dropbtn">
                            Article
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="mynav_dropdown-content">
                            <a class="nav-link text-black-50" asp-area="" asp-controller="Article" asp-action="AddArticle">Adding article</a>
                        </div>
                    </div>
                    <div class="mynav_dropdown">
                        <button class="mynav_dropbtn">
                            Author
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="mynav_dropdown-content">
                            <a class="nav-link text-black-50" asp-area="" asp-controller="Author" asp-action="AddAuthor">Adding author</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Influencers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
