@model List<Influencers.BusinessLogic.ViewModels.AuthorViewModel>
@{
    ViewData["Title"] = "Leaderboard";
    int medal = 0;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        #authors {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #authors td, #authors th {
                border: 1px solid #000;
                padding: 8px;
            }
            #authors tr {
                background-color: #ddd;
            }

            #authors th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: center;
                background-color: #4CAF50;
                color: white;
            }

        body {
            font-family: Arial;
            background: #7eedbd;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h3 class="display-4">Leaderboard</h3>
    </div>
    <br />
    <table id="authors">
        <tr>
            <th>Author name</th>
            <th>Votes</th>
        </tr>
         
        @if (Model.Count != 0)
        {
            <tr style="background-color:#e4c621">
                <td align="center">@Model[0].Nickname🥇</td>
                <td align="center">@Model[0].Votes</td>
            </tr>
        }

        @for (int index = 1; index < Model.Count; ++index)
        {
            if (@Model[index].Votes != @Model[index - 1].Votes)
            {
                ++medal;
            }
            if (medal == 0)
            {
                <tr style="background-color:#e4c621">
                    <td align="center">@Model[index].Nickname🥇</td>
                    <td align="center">@Model[index].Votes </td>
                </tr>
            }
            else if (medal == 1)
            {
                <tr style="background-color:#a39b9b">
                    <td align="center">@Model[index].Nickname🥈</td>
                    <td align="center">@Model[index].Votes</td>
                </tr>
            }
            else if (medal == 2)
            {
                <tr style="background-color:#e9833b">
                    <td align="center">@Model[index].Nickname🥉</td>
                    <td align="center">@Model[index].Votes</td>
                </tr>
            }
            else
            {
                <tr>
                    <td align="center">@Model[index].Nickname</td>
                    <td align="center">@Model[index].Votes</td>
                </tr>
            }
        }
    </table>

</body>
</html>


